<Page
    x:Class="XMangaDownloader.WPF.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:XMangaDownloader.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:XMangaDownloader.Core.ViewModels;assembly=XMangaDownloader.Core"
    xmlns:winui="http://schemas.modernwpf.com/2019"
    Title="MainPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Page.DataContext>
        <viewmodels:MangaDownloadViewModel x:Name="Vm" />
    </Page.DataContext>
    <Grid>
        <winui:SimpleStackPanel VerticalAlignment="Center" Spacing="30">
            <TextBox
                Width="426"
                Margin="0,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Text="{Binding MangaURL}"
                TextWrapping="Wrap" />
            <Button
                x:Name="DownloadManga"
                Width="106"
                Height="29"
                Margin="0,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="#3380D608"
                Click="DownloadManga_Click"
                Content="Download" />
        </winui:SimpleStackPanel>
    </Grid>
</Page>
